@if (TempData["SuccessMessage"] is not null)
{
    <div id="successMessageToast" class="toast align-items-center hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                @TempData["SuccessMessage"]
            </div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var toastElement = document.getElementById('successMessageToast');
            var toast = new bootstrap.Toast(toastElement, {
                animation: true,
                autohide: true,
                delay: 2000
            });
            toast.show();
        });
    </script>
}

